name: CI
on:
  push:
    branches:
      - {{default_branch}}
  pull_request:

jobs:
  test:
    name: Julia {{{open}}} matrix.julia-version {{{close}}} - {{{open}}} matrix.os {{{close}}}
    runs-on: {{{open}}} matrix.os {{{close}}}
    strategy:
      fail-fast: false
      matrix:
        julia-version:
{{#ci.julia_versions}}
          - '{{.}}'
{{/ci.julia_versions}}
        os:
{{#ci.os}}
          - '{{.}}'
{{/ci.os}}
    steps:
      - uses: actions/checkout@v4
      - uses: julia-actions/setup-julia@v2
        with:
          version: {{{open}}} matrix.julia-version {{{close}}}
      - uses: julia-actions/cache@v2
      - name: Build package
        run: |
          julia --project -e 'using Pkg; Pkg.instantiate()'
      - name: Run tests
        run: |
          julia --project=test -e 'using Pkg; Pkg.develop(path="."); Pkg.instantiate()'
          julia --project=test test/runtests.jl
{{#ci.codecov}}
      - uses: julia-actions/julia-processcoverage@v1
      - uses: codecov/codecov-action@v4
        with:
          files: lcov.info
{{/ci.codecov}}

{{#features.docs}}
  docs:
    name: Documentation
    runs-on: ubuntu-latest
    permissions:
      contents: write
      statuses: write
    steps:
      - uses: actions/checkout@v4
      - uses: julia-actions/setup-julia@v2
        with:
          version: '{{{ci.docs_julia_version}}}'
      - uses: julia-actions/cache@v2
      - name: Install dependencies
        run: julia --project=docs/ -e 'using Pkg; Pkg.develop(PackageSpec(path=pwd())); Pkg.instantiate()'
      - name: Build and deploy
        env:
          GITHUB_TOKEN: {{{open}}} secrets.GITHUB_TOKEN {{{close}}}
          DOCUMENTER_KEY: {{{open}}} secrets.DOCUMENTER_KEY {{{close}}}
        run: julia --project=docs/ docs/make.jl
{{/features.docs}}
